    let currentTheme = '';
    let currentIndex = 0;

    function startGame(theme) {
      currentTheme = theme;
      currentIndex = 0;
      document.getElementById('menuScreen').style.display = 'flex' ? 'none' : 'none'; // garanto o hide
      document.getElementById('menuScreen').style.display = 'none';
      document.getElementById('gameScreen').style.display = 'flex';
      showCharacter();
    }

    function showCharacter() {
      const character = characters[currentTheme][currentIndex];
      const nameEl = document.getElementById('characterName');
      const descEl = document.getElementById('characterDesc');
      const imgEl = document.getElementById('characterImg');
      const clickSound = document.getElementById('clickSound');

      if(character) {
        nameEl.textContent = character.name;
        descEl.textContent = character.desc;
        if(character.img) {
          imgEl.src = character.img;
          imgEl.style.display = 'block';
        } else {
          imgEl.style.display = 'none';
          imgEl.removeAttribute('src');
        }
      }
      clickSound.currentTime = 0;
      clickSound.play();
    }

    function showNextCharacter() {
      currentIndex++;
      if(currentIndex >= characters[currentTheme].length) {
        backToMenu();
      } else {
        showCharacter();
      }
    }

    function backToMenu(event) {
      if(event) event.stopPropagation(); // evita disparar click do gameScreen junto
      document.getElementById('menuScreen').style.display = 'flex';
      document.getElementById('gameScreen').style.display = 'none';
    }
  </script>
